.container
  .row
    .span8.center
      = form_for cs_class, :html => { :class => 'form-horizontal' } do |f|
        - if cs_class.errors.any?
          #error_explanation
            %h2= "#{pluralize(cs_class.errors.count, "error")} prohibited this cs_class from being saved:"
            %ul
              - cs_class.errors.full_messages.each do |msg|
                %li= msg
        %legend New class
        .control-group
          = f.label :name, :class => 'control-label'
          .controls
            = f.text_field :name, :class => 'input-xxlarge'
        .control-group
          = f.label :course_id, 'Course ID', :class => 'control-label'
          .controls
            = f.text_field :course_id, :class => 'input-xxlarge'
        .control-group
          = f.label :description, :class => 'control-label'
          .controls
            = f.text_area :description, :class => 'input-xxlarge'
        .control-group.controls
          = f.submit 'Save', :class => 'btn btn-success'
